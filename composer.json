{
    "name": "gempir/rest-api",
    "type": "project",
    "require": {
        "firebase/php-jwt": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "flyeralarm/php-code-validator": "^2.1"
    },
    "scripts": {
        "unit": "vendor/bin/phpunit",
        "cs": "vendor/bin/phpcs -w -p -s --standard=vendor/flyeralarm/php-code-validator/ruleset.xml src/ tests/",
        "test": [
            "@cs",
            "@unit"
        ]
    },
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    }
}
